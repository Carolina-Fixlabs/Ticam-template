{{ index_for_top_components }}

{% render 'theme_breadcrumbs' %}

<section class="container container--adjust theme-section">
  <div class="row align-items-center justify-content-center theme-section__content">
    <div class="col-12 col-md-11 col-lg-10 customer-form customer-form--address">
      <div class="customer-form__wrapper">
        <div class="w-100 text-center">
          <h1 class="theme-section__title">
            {%- if current_url contains 'add_address' and current_url contains 'type=shipping' %}
              {%- t "Add Shipping Address" -%}
            {% elsif current_url contains 'add_address' and current_url contains 'type=billing' %}
              {%- t "Add Billing Address" -%}
            {% elsif current_url contains 'edit_address' and current_url contains 'type=shipping' %}
              {%- t "Edit Shipping Address" -%}
            {% elsif current_url contains 'edit_address' and current_url contains 'type=billing' %}
              {%- t "Edit Billing Address" -%}
            {% endif -%}
          </h1>
        </div>

        {{ customer_address_form }}
      </div>
    </div>
    <!-- end .customer-form -->
  </div>
</section>

{{ index_for_bottom_components }}
