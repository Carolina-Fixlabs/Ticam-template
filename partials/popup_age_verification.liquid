{% if options.av_popup %}
  <popup-age-verification class="age-verification">
    <div class="age-verification__container">
      <div class="age-verification__wrapper">
        <h5 class="age-verification__title">{{ options.av_popup_title }}</h5>
        <div class="age-verification__text">{{ options.av_popup_content }}</div>
        <div class="age-verification__actions">
          <button type="button" class="button button--style age-verification__button age-verification__button--accept"><i class="ph ph-check"></i> {{ options.av_popup_button_accept -}}</button>
          <button type="button" class="button button--style age-verification__button age-verification__button--reject"><i class="ph ph-x"></i> {{ options.av_popup_button_reject -}}</button>
        </div>
      </div>
    </div>
  </popup-age-verification>
{% endif %}
