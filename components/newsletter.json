{
  "name": "Newsletter",
  "icon": "paper-plane",
  "help": "For more information about this component and how it works, please visit [this article](landing?url=support/theme-components/#-newsletter).",
  "max_usage": 1,
  "required": false,
  "tag": "div",
  "classes": "",
  "templates_in": [
    "home",
    "product",
    "category",
    "page",
    "searchresults",
    "contactpage",
    "error",
    "customer__account",
    "customer__login"
  ],
  "options": {
    "alignment": {
      "name": "Content alignment",
      "type": "select",
      "help": "Allows to define the alignment for the component content. This will also affect the position of the form.",
      "default": "center",
      "options": [
        {
          "label": "Left",
          "value": "start"
        },
        {
          "label": "Center",
          "value": "center"
        },
        {
          "label": "Right",
          "value": "end"
        }
      ]
    },
    "title": {
      "name": "Title",
      "type": "input",
      "default": "Subscribe to our Newsletter"
    },
    "description": {
      "name": "Description",
      "type": "text",
      "default": "You can add a text or description to encourage customers to subscribe."
    },
    "placeholder": {
      "name": "Email field placeholder",
      "type": "input",
      "default": "Enter your email here..."
    },
    "button": {
      "name": "Button text",
      "type": "input",
      "default": "Subscribe"
    },
    "disclaimer": {
      "name": "Disclaimer text",
      "type": "text",
      "help": "Text that can be displayed after the Newsletter form",
      "default": "",
      "placeholder": "Add a disclaimer to provide more information about the Newsletter"
    },
    "enable_image": {
      "name": "Enable Background image",
      "type": "checkbox",
      "default": false
    },
    "image_desktop": {
      "name": "Background image (desktop)",
      "type": "image"
    },
    "image_mobile": {
      "name": "Background image (mobile)",
      "type": "image"
    },
    "image_overlay": {
      "name": "Image overlay",
      "type": "slider",
      "default": 50,
      "min": 0,
      "max": 90,
      "step": 10,
      "unit": ""
    },
    "position_image_x": {
      "name": "Horizontal image position",
      "type": "select",
      "default": "center",
      "options": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Center",
          "value": "center"
        },
        {
          "label": "Right",
          "value": "right"
        }
      ]
    },
    "position_image_y": {
      "name": "Vertical image position",
      "type": "select",
      "default": "center",
      "options": [
        {
          "label": "Top",
          "value": "top"
        },
        {
          "label": "Center",
          "value": "center"
        },
        {
          "label": "Bottom",
          "value": "bottom"
        }
      ]
    },
    "group_appearance": {
      "name": "Appearance",
      "type": "heading",
      "default": false
    },
    "margin_top": {
      "name": "Top margin",
      "type": "slider",
      "default": 48,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "margin_bottom": {
      "name": "Bottom margin",
      "type": "slider",
      "default": 48,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "bundle_color": {
      "name": "Content colors",
      "type": "bundle",
      "default": "system-1",
      "pack": "color"
    },
    "animate": {
      "name": "Customize animation options",
      "type": "checkbox",
      "help": "Allows to override the animation options defined at **Theme settings > Design > Enable theme animations**.",
      "default": false
    },
    "animate_type": {
      "name": "Animation type",
      "type": "select",
      "default": "fade-up",
      "options": [
        {
          "label": "From down",
          "value": "fade-up"
        },
        {
          "label": "From up",
          "value": "fade-down"
        },
        {
          "label": "From left",
          "value": "fade-right"
        },
        {
          "label": "From right",
          "value": "fade-left"
        },
        {
          "label": "Zoom in",
          "value": "zoom-in"
        },
        {
          "label": "Zoom out",
          "value": "zoom-out"
        }
      ]
    },
    "animate_repeat": {
      "name": "Do the animation once",
      "type": "checkbox",
      "default": true
    },
    "animate_delay": {
      "name": "Animation delay",
      "type": "slider",
      "default": 50,
      "min": 0,
      "max": 300,
      "step": 50,
      "unit": "ms"
    }
  },
  "nesting": {
    "animate": [
      "animate_type",
      "animate_repeat",
      "animate_delay"
    ],
    "enable_image": [
      "image_desktop",
      "image_mobile",
      "image_overlay",
      "position_image_x",
      "position_image_y"
    ],
    "group_appearance": [
      "margin_top",
      "margin_bottom",
      "bundle_color",
      "animate"
    ]
  },
  "mode": "subcomponents",
  "properties": {}
}