{
  "name": "Featured category",
  "icon": "tag",
  "help": "This component allows to display products from a specific category of your store. For more information about this component and how it works, please visit [this article](landing?url=support/theme-components/#-featured-category).",
  "max_usage": 4,
  "required": false,
  "tag": "div",
  "classes": "",
  "templates_in": [
    "home",
    "product",
    "category",
    "page",
    "searchresults",
    "contactpage",
    "error",
    "customer__login"
  ],
  "options": {
    "permalink": {
      "name": "Featured category",
      "type": "category"
    },
    "limit": {
      "name": "Quantity of items to display",
      "type": "slider",
      "default": 12,
      "min": 4,
      "max": 24,
      "step": 1,
      "unit": ""
    },
    "display": {
      "name": "Display type",
      "type": "select",
      "default": "carousel",
      "options": [
        {
          "label": "Carousel",
          "value": "carousel"
        },
        {
          "label": "Grid",
          "value": "grid"
        }
      ]
    },
    "heading": {
      "name": "Enable heading",
      "type": "checkbox",
      "default": true
    },
    "heading_subtitle": {
      "name": "Subtitle",
      "type": "input",
      "default": ""
    },
    "heading_title": {
      "name": "Title",
      "type": "input",
      "help": "Allows to replace the name of the selected category.",
      "default": ""
    },
    "heading_description": {
      "name": "Description",
      "type": "text",
      "default": "",
      "placeholder": "Add a description to provide more information about the selected category"
    },
    "heading_link": {
      "name": "Link",
      "type": "checkbox",
      "default": true
    },
    "heading_link_text": {
      "name": "Link text",
      "type": "input",
      "default": "See more products"
    },
    "group_image": {
      "name": "Featured image",
      "type": "heading",
      "default": false
    },
    "display_image": {
      "name": "Display featured image",
      "type": "checkbox",
      "help": "The category image will be displayed by default. You can override it by uploading images for desktop and/or mobile devices.",
      "default": true
    },
    "image_desktop": {
      "name": "Featured image (desktop)",
      "type": "image"
    },
    "image_mobile": {
      "name": "Featured image (mobile)",
      "type": "image"
    },
    "show_image_content": {
      "name": "Show Category information",
      "type": "checkbox",
      "default": false
    },
    "image_overlay": {
      "name": "Image overlay",
      "type": "slider",
      "default": 50,
      "min": 0,
      "max": 90,
      "step": 10,
      "unit": ""
    },
    "image_title": {
      "name": "Custom category name",
      "type": "input",
      "default": ""
    },
    "image_link": {
      "name": "Link button text",
      "type": "input",
      "default": ""
    },
    "image_content_align_desktop": {
      "name": "Content desktop alignment",
      "type": "select",
      "default": "text-md-center",
      "options": [
        {
          "label": "Left",
          "value": "text-md-start"
        },
        {
          "label": "Center",
          "value": "text-md-center"
        },
        {
          "label": "Right",
          "value": "text-md-end"
        }
      ]
    },
    "image_content_align_mobile": {
      "name": "Content mobile alignment",
      "type": "select",
      "default": "text-center",
      "options": [
        {
          "label": "Left",
          "value": "text-start"
        },
        {
          "label": "Center",
          "value": "text-center"
        },
        {
          "label": "Right",
          "value": "text-end"
        }
      ]
    },
    "image_content_position_y": {
      "name": "Content vertical position",
      "type": "select",
      "default": "center",
      "options": [
        {
          "label": "Top",
          "value": "top"
        },
        {
          "label": "Center",
          "value": "center"
        },
        {
          "label": "Bottom",
          "value": "end"
        }
      ]
    },
    "image_bundle_color": {
      "name": "Featured Image Content colors",
      "type": "bundle",
      "default": "system-1",
      "pack": "color"
    },
    "group_carousel": {
      "name": "Carousel settings",
      "type": "heading",
      "default": false
    },
    "autoplay": {
      "name": "Enable autoplay",
      "type": "checkbox",
      "default": false
    },
    "autoplay_speed": {
      "name": "Autoplay speed",
      "type": "slider",
      "default": 4000,
      "min": 1000,
      "max": 6000,
      "step": 500,
      "unit": "ms"
    },
    "show_arrows": {
      "name": "Show arrows",
      "type": "checkbox",
      "default": true
    },
    "show_arrows_hover": {
      "name": "Show arrows on hover",
      "type": "checkbox",
      "default": false
    },
    "show_dots": {
      "name": "Show dots",
      "type": "checkbox",
      "default": true
    },
    "group_appearance": {
      "name": "Appearance",
      "type": "heading",
      "default": false
    },
    "margin_top": {
      "name": "Top margin",
      "type": "slider",
      "default": 48,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "margin_bottom": {
      "name": "Bottom margin",
      "type": "slider",
      "default": 48,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "bundle_color": {
      "name": "Content colors",
      "type": "bundle",
      "default": "default",
      "pack": "color"
    },
    "animate": {
      "name": "Customize animation options",
      "type": "checkbox",
      "help": "Allows to override the animation options defined at **Theme settings > Design > Enable theme animations**.",
      "default": false
    },
    "animate_type": {
      "name": "Animation type",
      "type": "select",
      "default": "fade-up",
      "options": [
        {
          "label": "From down",
          "value": "fade-up"
        },
        {
          "label": "From up",
          "value": "fade-down"
        },
        {
          "label": "From left",
          "value": "fade-right"
        },
        {
          "label": "From right",
          "value": "fade-left"
        },
        {
          "label": "Zoom in",
          "value": "zoom-in"
        },
        {
          "label": "Zoom out",
          "value": "zoom-out"
        }
      ]
    },
    "animate_repeat": {
      "name": "Do the animation once",
      "type": "checkbox",
      "default": true
    },
    "animate_delay": {
      "name": "Animation delay",
      "type": "slider",
      "default": 50,
      "min": 0,
      "max": 300,
      "step": 50,
      "unit": "ms"
    }
  },
  "nesting": {
    "animate": [
      "animate_type",
      "animate_repeat",
      "animate_delay"
    ],
    "heading": [
      "heading_subtitle",
      "heading_title",
      "heading_description",
      "heading_link",
      "heading_link_text"
    ],
    "autoplay": [
      "autoplay_speed"
    ],
    "group_image": [
      "display_image",
      "image_desktop",
      "image_mobile",
      "show_image_content"
    ],
    "show_arrows": [
      "show_arrows_hover"
    ],
    "group_carousel": [
      "autoplay",
      "show_arrows",
      "show_dots"
    ],
    "group_appearance": [
      "margin_top",
      "margin_bottom",
      "bundle_color",
      "animate"
    ],
    "show_image_content": [
      "image_overlay",
      "image_title",
      "image_link",
      "image_content_align_desktop",
      "image_content_align_mobile",
      "image_content_position_y",
      "image_bundle_color"
    ]
  },
  "mode": "subcomponents",
  "properties": {}
}