{
  "name": "Contact form",
  "icon": "circle-envelope",
  "help": "For more information about this component and how it works, please visit [this article](landing?url=support/theme-components/#-contact-form).",
  "max_usage": 1,
  "required": false,
  "tag": "div",
  "classes": "",
  "templates_in": [
    "home",
    "product",
    "category",
    "page",
    "searchresults",
    "contactpage",
    "error"
  ],
  "options": {
    "heading": {
      "name": "Enable heading",
      "type": "checkbox",
      "default": true
    },
    "heading_subtitle": {
      "name": "Subtitle",
      "type": "input",
      "default": ""
    },
    "heading_title": {
      "name": "Title",
      "type": "input",
      "default": "Send us a message"
    },
    "heading_description": {
      "name": "Description",
      "type": "text",
      "default": "Fill all the fields and send your message. We will reply as soon as possible."
    },
    "heading_link": {
      "name": "Link",
      "type": "link",
      "default": null
    },
    "heading_link_text": {
      "name": "Link text",
      "type": "input",
      "default": "Read more"
    },
    "group_appearance": {
      "name": "Appearance",
      "type": "heading",
      "default": false
    },
    "margin_top": {
      "name": "Top margin",
      "type": "slider",
      "default": 48,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "margin_bottom": {
      "name": "Bottom margin",
      "type": "slider",
      "default": 48,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "bundle_color": {
      "name": "Content colors",
      "type": "bundle",
      "default": "default",
      "pack": "color"
    },
    "animate": {
      "name": "Customize animation options",
      "type": "checkbox",
      "help": "Allows to override the animation options defined at **Theme settings > Design > Enable theme animations**.",
      "default": false
    },
    "animate_type": {
      "name": "Animation type",
      "type": "select",
      "default": "fade-up",
      "options": [
        {
          "label": "From down",
          "value": "fade-up"
        },
        {
          "label": "From up",
          "value": "fade-down"
        },
        {
          "label": "From left",
          "value": "fade-right"
        },
        {
          "label": "From right",
          "value": "fade-left"
        },
        {
          "label": "Zoom in",
          "value": "zoom-in"
        },
        {
          "label": "Zoom out",
          "value": "zoom-out"
        }
      ]
    },
    "animate_repeat": {
      "name": "Do the animation once",
      "type": "checkbox",
      "default": true
    },
    "animate_delay": {
      "name": "Animation delay",
      "type": "slider",
      "default": 50,
      "min": 0,
      "max": 300,
      "step": 50,
      "unit": "ms"
    }
  },
  "nesting": {
    "animate": [
      "animate_type",
      "animate_repeat",
      "animate_delay"
    ],
    "heading": [
      "heading_subtitle",
      "heading_title",
      "heading_description",
      "heading_link",
      "heading_link_text"
    ],
    "group_appearance": [
      "margin_top",
      "margin_bottom",
      "bundle_color",
      "animate"
    ]
  },
  "mode": "subcomponents",
  "properties": {}
}