{% if prod.attachments != blank %}
  {% assign title = product-attachments.options.title %}
  {% assign title_attribute = product-attachments.attributes.textfield.title %}

  <div class="w-100 mt-2" {{ product-attachments.attributes }}>
    {% if template == 'product' %}
      <h2 class="product-page__subtitle" {{ title_attribute }}>
        {{- title -}}
      </h2>
    {% else %}
      <h4 class="product-page__subtitle" {{ title_attribute }}>
        {{- title -}}
      </h4>
    {% endif %}

    <div class="product-details product-details--table">
      {% for attachment in prod.attachments %}
        <div class="product-details__row">
          <a href="{{ attachment.url }}" class="product-details__download" title="{% t 'Download' %}" target="_blank">
            <i class="ph ph-download-simple"></i>
            {{- attachment.name | remove: '_' -}}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}
