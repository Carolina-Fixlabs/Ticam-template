{
  "name": "Slider",
  "icon": "images",
  "help": "For more information about this component and how it works, please visit [this article](landing?url=support/theme-components/#-slider).",
  "max_usage": null,
  "required": false,
  "tag": "div",
  "classes": "",
  "templates_in": [
    "home",
    "product",
    "category",
    "page",
    "searchresults",
    "contactpage",
    "error",
    "customer__login"
  ],
  "options": {
    "content_type": {
      "name": "Content type",
      "type": "select",
      "default": "content",
      "options": [
        {
          "label": "Image + Content",
          "value": "content"
        },
        {
          "label": "Image only",
          "value": "image"
        }
      ]
    },
    "width": {
      "name": "Width",
      "type": "select",
      "help": "When choosing **Default**, the option defined at **Theme settings > Design > Theme styles > Maximum container width** will be applied.",
      "default": "default",
      "options": [
        {
          "label": "Default",
          "value": "default"
        },
        {
          "label": "Small",
          "value": "1320px"
        },
        {
          "label": "Medium",
          "value": "1620px"
        },
        {
          "label": "Large",
          "value": "1920px"
        },
        {
          "label": "Extra Large",
          "value": "2220px"
        },
        {
          "label": "Full width",
          "value": "100%"
        }
      ]
    },
    "height": {
      "name": "Height",
      "type": "select",
      "default": "medium",
      "options": [
        {
          "label": "Fit to content",
          "value": "auto"
        },
        {
          "label": "Small",
          "value": "small"
        },
        {
          "label": "Medium",
          "value": "medium"
        },
        {
          "label": "Large",
          "value": "large"
        },
        {
          "label": "Browser",
          "value": "browser"
        }
      ]
    },
    "group_carousel": {
      "name": "Slider settings",
      "type": "heading",
      "default": false
    },
    "autoplay": {
      "name": "Enable autoplay",
      "type": "checkbox",
      "default": true
    },
    "autoplay_speed": {
      "name": "Autoplay speed",
      "type": "slider",
      "default": 3000,
      "min": 1000,
      "max": 6000,
      "step": 500,
      "unit": "ms"
    },
    "show_arrows": {
      "name": "Show Arrows",
      "type": "checkbox",
      "help": "If enabled, arrows will be displayed to control the 'Slider'.",
      "default": true
    },
    "show_arrows_hover": {
      "name": "Show arrows on hover",
      "type": "checkbox",
      "default": false
    },
    "show_dots": {
      "name": "Show Dots",
      "type": "checkbox",
      "help": "If enabled, dots will be displayed to control the 'Slider'.",
      "default": true
    },
    "group_appearance": {
      "name": "Appearance",
      "type": "heading",
      "default": false
    },
    "margin_top": {
      "name": "Top margin",
      "type": "slider",
      "default": 0,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "margin_bottom": {
      "name": "Bottom margin",
      "type": "slider",
      "default": 0,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "bundle_color": {
      "name": "Content colors",
      "type": "bundle",
      "default": "default",
      "pack": "color"
    },
    "animate": {
      "name": "Customize animation options",
      "type": "checkbox",
      "help": "Allows to override the animation options defined at **Theme settings > Design > Enable theme animations**.",
      "default": false
    },
    "animate_type": {
      "name": "Animation type",
      "type": "select",
      "default": "fade-up",
      "options": [
        {
          "label": "From down",
          "value": "fade-up"
        },
        {
          "label": "From up",
          "value": "fade-down"
        },
        {
          "label": "From left",
          "value": "fade-right"
        },
        {
          "label": "From right",
          "value": "fade-left"
        },
        {
          "label": "Zoom in",
          "value": "zoom-in"
        },
        {
          "label": "Zoom out",
          "value": "zoom-out"
        }
      ]
    },
    "animate_repeat": {
      "name": "Do the animation once",
      "type": "checkbox",
      "default": true
    },
    "animate_delay": {
      "name": "Animation delay",
      "type": "slider",
      "default": 50,
      "min": 0,
      "max": 300,
      "step": 50,
      "unit": "ms"
    }
  },
  "nesting": {
    "animate": [
      "animate_type",
      "animate_repeat",
      "animate_delay"
    ],
    "autoplay": [
      "autoplay_speed"
    ],
    "show_arrows": [
      "show_arrows_hover"
    ],
    "group_carousel": [
      "autoplay",
      "show_arrows",
      "show_dots"
    ],
    "group_appearance": [
      "margin_top",
      "margin_bottom",
      "bundle_color",
      "animate"
    ]
  },
  "mode": "subcomponents",
  "properties": {
    "slides": {
      "type": "slide",
      "multiple": true
    }
  }
}