{
  "name": "Line divider",
  "icon": "grid-dividers",
  "help": "For more information about this component and how it works, please visit [this article](landing?url=support/theme-components/#-line-divider).",
  "max_usage": null,
  "required": false,
  "tag": "div",
  "classes": "",
  "templates_in": [
    "home",
    "product",
    "category",
    "page",
    "searchresults",
    "contactpage",
    "error",
    "customer__account",
    "customer__login"
  ],
  "options": {
    "width": {
      "name": "Width",
      "type": "select",
      "help": "When choosing **Default**, the option defined at **Theme settings > Design > Theme styles > Maximum container width** will be applied.",
      "default": "default",
      "options": [
        {
          "label": "Default",
          "value": "default"
        },
        {
          "label": "Small",
          "value": "1320px"
        },
        {
          "label": "Medium",
          "value": "1620px"
        },
        {
          "label": "Large",
          "value": "1920px"
        },
        {
          "label": "Extra Large",
          "value": "2220px"
        },
        {
          "label": "Full width",
          "value": "100%"
        }
      ]
    },
    "spacing": {
      "name": "Remove right and left space",
      "type": "checkbox",
      "default": false
    },
    "thickness": {
      "name": "Line thickness",
      "type": "slider",
      "default": 1,
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "px"
    },
    "opacity": {
      "name": "Line opacity",
      "type": "slider",
      "default": 20,
      "min": 10,
      "max": 100,
      "step": 10,
      "unit": "%"
    },
    "group_appearance": {
      "name": "Appearance",
      "type": "heading",
      "default": false
    },
    "margin_top": {
      "name": "Top margin",
      "type": "slider",
      "default": 16,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "margin_bottom": {
      "name": "Bottom margin",
      "type": "slider",
      "default": 16,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "bundle_color": {
      "name": "Content colors",
      "type": "bundle",
      "default": "default",
      "pack": "color"
    },
    "animate": {
      "name": "Customize animation options",
      "type": "checkbox",
      "help": "Allows to override the animation options defined at **Theme settings > Design > Enable theme animations**.",
      "default": false
    },
    "animate_type": {
      "name": "Animation type",
      "type": "select",
      "default": "fade-up",
      "options": [
        {
          "label": "From down",
          "value": "fade-up"
        },
        {
          "label": "From up",
          "value": "fade-down"
        },
        {
          "label": "From left",
          "value": "fade-right"
        },
        {
          "label": "From right",
          "value": "fade-left"
        },
        {
          "label": "Zoom in",
          "value": "zoom-in"
        },
        {
          "label": "Zoom out",
          "value": "zoom-out"
        }
      ]
    },
    "animate_repeat": {
      "name": "Do the animation once",
      "type": "checkbox",
      "default": true
    },
    "animate_delay": {
      "name": "Animation delay",
      "type": "slider",
      "default": 50,
      "min": 0,
      "max": 300,
      "step": 50,
      "unit": "ms"
    }
  },
  "nesting": {
    "animate": [
      "animate_type",
      "animate_repeat",
      "animate_delay"
    ],
    "group_appearance": [
      "margin_top",
      "margin_bottom",
      "bundle_color",
      "animate"
    ]
  },
  "mode": "subcomponents",
  "properties": {}
}