{
  "name": "Page share",
  "icon": "share-nodes",
  "max_usage": 1,
  "required": true,
  "tag": "div",
  "classes": "",
  "templates_in": [
    "page"
  ],
  "options": {
    "alignment": {
      "name": "Content alignment",
      "type": "select",
      "default": "center",
      "options": [
        {
          "label": "Left",
          "value": "start"
        },
        {
          "label": "Center",
          "value": "center"
        },
        {
          "label": "Right",
          "value": "end"
        }
      ]
    },
    "title": {
      "name": "Title",
      "type": "input",
      "default": "Share this article"
    },
    "show_facebook": {
      "name": "Display Facebook share link",
      "type": "checkbox",
      "default": true
    },
    "show_twitter": {
      "name": "Display ð• share link",
      "type": "checkbox",
      "default": true
    },
    "show_whatsapp": {
      "name": "Display WhatsApp share link",
      "type": "checkbox",
      "default": true
    },
    "show_pinterest": {
      "name": "Show Pinterest",
      "type": "checkbox",
      "default": true
    },
    "show_email": {
      "name": "Display Email share link",
      "type": "checkbox",
      "default": false
    },
    "show_clipboard": {
      "name": "Display Copy to clipboard",
      "type": "checkbox",
      "default": true
    },
    "group_appearance": {
      "name": "Appearance",
      "type": "heading",
      "default": false
    },
    "margin_top": {
      "name": "Top margin",
      "type": "slider",
      "default": 32,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "margin_bottom": {
      "name": "Bottom margin",
      "type": "slider",
      "default": 40,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "bundle_color": {
      "name": "Content colors",
      "type": "bundle",
      "default": "default",
      "pack": "color"
    },
    "animate": {
      "name": "Customize animation options",
      "type": "checkbox",
      "help": "Allows to override the animation options defined at **Theme settings > Design > Enable theme animations**.",
      "default": false
    },
    "animate_type": {
      "name": "Animation type",
      "type": "select",
      "default": "fade-up",
      "options": [
        {
          "label": "From down",
          "value": "fade-up"
        },
        {
          "label": "From up",
          "value": "fade-down"
        },
        {
          "label": "From left",
          "value": "fade-right"
        },
        {
          "label": "From right",
          "value": "fade-left"
        },
        {
          "label": "Zoom in",
          "value": "zoom-in"
        },
        {
          "label": "Zoom out",
          "value": "zoom-out"
        }
      ]
    },
    "animate_repeat": {
      "name": "Do the animation once",
      "type": "checkbox",
      "default": true
    },
    "animate_delay": {
      "name": "Animation delay",
      "type": "slider",
      "default": 50,
      "min": 0,
      "max": 300,
      "step": 50,
      "unit": "ms"
    }
  },
  "nesting": {
    "animate": [
      "animate_type",
      "animate_repeat",
      "animate_delay"
    ],
    "group_appearance": [
      "margin_top",
      "margin_bottom",
      "bundle_color",
      "animate"
    ]
  },
  "mode": "subcomponents",
  "properties": {}
}