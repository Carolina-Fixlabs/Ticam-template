{
  "name": "Locations",
  "icon": "location-dot",
  "help": "For more information about this component and how it works, please visit [this article](landing?url=support/theme-components/#-locations).",
  "max_usage": 2,
  "required": false,
  "tag": "div",
  "classes": "",
  "templates_in": [
    "home",
    "product",
    "category",
    "page",
    "searchresults",
    "contactpage",
    "error"
  ],
  "options": {
    "display": {
      "name": "Locations to display",
      "type": "select",
      "default": "all",
      "options": [
        {
          "label": "All locations",
          "value": "all"
        },
        {
          "label": "Pickup locations",
          "value": "pickups"
        }
      ]
    },
    "columns_desktop": {
      "name": "Amount of locations per row",
      "type": "select",
      "default": "2",
      "options": [
        {
          "label": "1",
          "value": "1"
        },
        {
          "label": "2",
          "value": "2"
        },
        {
          "label": "3",
          "value": "3"
        }
      ]
    },
    "alignment": {
      "name": "Content alignment",
      "type": "select",
      "default": "start",
      "options": [
        {
          "label": "Left",
          "value": "start"
        },
        {
          "label": "Center",
          "value": "center"
        },
        {
          "label": "Right",
          "value": "end"
        }
      ]
    },
    "heading": {
      "name": "Enable heading",
      "type": "checkbox",
      "default": true
    },
    "heading_subtitle": {
      "name": "Subtitle",
      "type": "input",
      "default": ""
    },
    "heading_title": {
      "name": "Title",
      "type": "input",
      "default": "Our stores"
    },
    "heading_description": {
      "name": "Description",
      "type": "text",
      "default": "",
      "placeholder": "Add a description to provide more information about your store locations"
    },
    "heading_link": {
      "name": "Link",
      "type": "link",
      "default": null
    },
    "heading_link_text": {
      "name": "Link text",
      "type": "input",
      "default": "Read more"
    },
    "group_info": {
      "name": "Information options",
      "type": "heading",
      "default": false
    },
    "show_email": {
      "name": "Show location email",
      "type": "checkbox",
      "default": false
    },
    "show_phone": {
      "name": "Show location phone",
      "type": "checkbox",
      "default": true
    },
    "show_address": {
      "name": "Show location address",
      "type": "checkbox",
      "default": true
    },
    "show_details": {
      "name": "Show location details",
      "type": "checkbox",
      "default": true
    },
    "show_map": {
      "name": "Show location map",
      "type": "checkbox",
      "default": true
    },
    "group_appearance": {
      "name": "Appearance",
      "type": "heading",
      "default": false
    },
    "margin_top": {
      "name": "Top margin",
      "type": "slider",
      "default": 48,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "margin_bottom": {
      "name": "Bottom margin",
      "type": "slider",
      "default": 48,
      "min": 0,
      "max": 80,
      "step": 8,
      "unit": "px"
    },
    "bundle_color": {
      "name": "Content colors",
      "type": "bundle",
      "default": "default",
      "pack": "color"
    },
    "animate": {
      "name": "Customize animation options",
      "type": "checkbox",
      "help": "Allows to override the animation options defined at **Theme settings > Design > Enable theme animations**.",
      "default": false
    },
    "animate_type": {
      "name": "Animation type",
      "type": "select",
      "default": "fade-up",
      "options": [
        {
          "label": "From down",
          "value": "fade-up"
        },
        {
          "label": "From up",
          "value": "fade-down"
        },
        {
          "label": "From left",
          "value": "fade-right"
        },
        {
          "label": "From right",
          "value": "fade-left"
        },
        {
          "label": "Zoom in",
          "value": "zoom-in"
        },
        {
          "label": "Zoom out",
          "value": "zoom-out"
        }
      ]
    },
    "animate_repeat": {
      "name": "Do the animation once",
      "type": "checkbox",
      "default": true
    },
    "animate_delay": {
      "name": "Animation delay",
      "type": "slider",
      "default": 50,
      "min": 0,
      "max": 300,
      "step": 50,
      "unit": "ms"
    }
  },
  "nesting": {
    "animate": [
      "animate_type",
      "animate_repeat",
      "animate_delay"
    ],
    "heading": [
      "heading_subtitle",
      "heading_title",
      "heading_description",
      "heading_link",
      "heading_link_text"
    ],
    "group_info": [
      "show_email",
      "show_phone",
      "show_address",
      "show_details",
      "show_map"
    ],
    "group_appearance": [
      "margin_top",
      "margin_bottom",
      "bundle_color",
      "animate"
    ]
  },
  "mode": "subcomponents",
  "properties": {}
}