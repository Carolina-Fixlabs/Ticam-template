  --pb-card-color-button-main-bg-hover: {{ color.options.main_button_background | color_lighten: 12.5 }};
  --pb-card-color-button-main-text: {{ color.options.main_button_text }};
  --pb-card-color-button-secondary-bg: {{ color.options.secondary_button_background }};
