  --pb-card-color-background: {{ color.options.background }};
  --pb-card-color-border: {{ options.pb_card_border_opacity | divided_by: 100.00 }};
  --pb-card-color-main: {{ color.options.main }};
  --pb-card-color-main-op1: {{ color.options.main | color_opacity: 0.1 }};
