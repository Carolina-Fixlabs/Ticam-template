{% comment %}
Here you find declarations of global CSS variables and a handful of conditional CSS rules,
mostly computed from theme option settings. Important design considerations:

- The visual editor system will look for the pattern `options.<option_code>` in this file
  to determine that changes to option <option_code> can be previewed by *only* refreshing this file.
- This file is refreshed inplace in the visual editor preview in such cases.

Documentation: https://jumpseller.com/support/creating-a-custom-html-theme#special-variables
{% endcomment -%}

{% assign font_parsed_main = options.font_main | split: "," | first | strip | url_encode %}
{% assign font_parsed_secondary = options.font_secondary | split: "," | first | strip | url_encode %}
{% assign font_parsed_store_name = options.font_store_name | split: "," | first | strip | url_encode %}
{% assign font_parsed_buttons = options.font_buttons | split: "," | first | strip | url_encode %}

{% assign font_weights = 'ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800' %}
{% assign fonts_array = font_parsed_main | append: ',' | append: font_parsed_secondary | append: ',' | append: font_parsed_store_name | append: ',' | append: font_parsed_buttons | split: ',' | uniq %}
{% for font_encoded in fonts_array %}
  {% if font_encoded != "" %}
    @import url('https://fonts.googleapis.com/css2?family={{ font_encoded }}:{{ font_weights }}&display=swap');
  {% endif %}
{% endfor %}

/* Phosphor optimized imports outside visual editor */
@import url('https://unpkg.com/@phosphor-icons/web@2.1.1/src/regular/style.css');
{% if options.theme_icon_style != 'regular' %}
  @import url('https://unpkg.com/@phosphor-icons/web@2.1.1/src/{{ options.theme_icon_style }}/style.css');
{% endif %}

{% if options.theme_icon_style != 'fill' %}
  @font-face {
    font-family: "Phosphor-Fill";
    src: url("https://unpkg.com/@phosphor-icons/web@2.1.1/src/fill/Phosphor-Fill.woff2") format("woff2"),
      url("https://unpkg.com/@phosphor-icons/web@2.1.1/src/fill/Phosphor-Fill.woff") format("woff"),
      url("https://unpkg.com/@phosphor-icons/web@2.1.1/src/fill/Phosphor-Fill.ttf") format("truetype"),
      url("https://unpkg.com/@phosphor-icons/web@2.1.1/src/fill/Phosphor-Fill.svg#Phosphor-Fill") format("svg");
    font-weight: normal;
    font-style: normal;
    font-display: block;
  }
  .ph-fill {
    font-family: "Phosphor-Fill" !important;
    speak: never;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    letter-spacing: 0;
    -webkit-font-feature-settings: "liga";
    -moz-font-feature-settings: "liga=1";
    -moz-font-feature-settings: "liga";
    -ms-font-feature-settings: "liga" 1;
    font-feature-settings: "liga";
    -webkit-font-variant-ligatures: discretionary-ligatures;
    font-variant-ligatures: discretionary-ligatures;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  .ph-fill.ph-star:before { content: "\e46a"; }
  .ph-fill.ph-circle:before { content: "\e18a"; }
  .ph-fill.ph-navigation-arrow:before { content: "\eade"; }
  .ph-fill.ph-heart:before { content: "\e2a8"; }
{% endif %}

:root {
  /* Set theme icon style */
  {% case options.theme_icon_style %}
    {% when 'regular' %}
      --theme-icon-style: "Phosphor";
    {% when 'bold' %}
      --theme-icon-style: "Phosphor-Bold";
    {% when 'fill' %}
      --theme-icon-style: "Phosphor-Fill";
    {% when 'light' %}
      --theme-icon-style: "Phosphor-Light";
    {% when 'thin' %}
      --theme-icon-style: "Phosphor-Thin";
    {% else %}
      --theme-icon-style: "Phosphor";
  {% endcase %}

  /* Set theme fonts */
  --font-main: {{ options.font_main }};
  --font-secondary: {{ options.font_secondary }};
  --font-store-name: {{ options.font_store_name }};
  --font-buttons: {{ options.font_buttons }};

  /* Set theme font sizes defaults */
  --font-base-size: {{ options.font_base_size }}px;
  --font-base-line-height: calc(var(--font-base-size) * 1.65);
  {% case options.heading_title_size %}
    {% when 'small' %}
      --title-size-mobile: calc(var(--font-base-size) * 1.25);
      --title-size-desktop: calc(var(--font-base-size) * 1.5);
    {% when 'medium' %}
      --title-size-mobile: calc(var(--font-base-size) * 1.5);
      --title-size-desktop: calc(var(--font-base-size) * 2);
    {% when 'large' %}
      --title-size-mobile: calc(var(--font-base-size) * 1.75);
      --title-size-desktop: calc(var(--font-base-size) * 2.5);
    {% when 'extra-large' %}
      --title-size-mobile: calc(var(--font-base-size) * 2.25);
      --title-size-desktop: calc(var(--font-base-size) * 3);
  {% endcase %}
  --title-weight: {{ options.heading_title_weight }};
  --title-spacing: {{ options.heading_title_spacing }}px;
  --title-text-transform: {% if options.heading_title_uppercase %}uppercase{% else %}inherit{% endif %};
  --subtitle-size-mobile-number: 0.3;
  --subtitle-size-desktop-number: 0.4;
  --subtitle-size-mobile: calc(var(--title-size-desktop) * var(--subtitle-size-mobile-number));
  --subtitle-size-desktop: calc(var(--title-size-desktop) * var(--subtitle-size-desktop-number));
  --description-size-mobile: calc(var(--font-base-size) * 0.9);
  {% case options.heading_description_size %}
    {% when 'small' %}
      --description-size-desktop: calc(var(--font-base-size) * 0.9);
    {% when 'medium' %}
      --description-size-desktop: calc(var(--font-base-size) * 1);
    {% when 'large' %}
      --description-size-desktop: calc(var(--font-base-size) * 1.125);
  {% endcase %}
  --links-size-mobile: calc(var(--font-base-size) * 0.8);
  --links-size-desktop: calc(var(--font-base-size) * 0.85);

  /* Store Name settings */
  {% case options.theme_store_name_size %}
    {% when 'small' %}
      --store-name-size-mobile: calc(var(--font-base-size) * 0.95);
      --store-name-size-desktop: calc(var(--font-base-size) * 1.25);
    {% when 'medium' %}
      --store-name-size-mobile: calc(var(--font-base-size) * 1.1);
      --store-name-size-desktop: calc(var(--font-base-size) * 1.5);
    {% when 'large' %}
      --store-name-size-mobile: calc(var(--font-base-size) * 1.3);
      --store-name-size-desktop: calc(var(--font-base-size) * 1.75);
  {% endcase %}
  --store-name-weight: {{ options.theme_store_name_weight }};

  /* Theme corners style definitions */
  {% case options.theme_corners_style %}
    {% when 'rectangular' %}
      --radius-style: 0px;
    {% when 'rounded' %}
      --radius-style: 5px;
      --radius-style-adapt: var(--radius-style);
      --radius-style-inner: calc(calc(var(--radius-style)) - calc(var(--radius-style) * 0.5));
    {% when 'rounded-large' %}
      --radius-style: 15px;
      --radius-style-adapt: calc(var(--radius-style) * 0.5);
      --radius-style-inner: calc(calc(var(--radius-style)) - calc(var(--radius-style) * 0.5));
  {% endcase %}

  /* Theme buttons style definitions */
  --button-font-size: calc(var(--font-base-size) * .9);
  {% case options.theme_button_style %}
    {% when 'circular' %}
      --button-style: 200px;
    {% when 'rectangular' %}
      --button-style: 0px;
    {% when 'rounded' %}
      --button-style: calc(var(--font-base-size) * 0.5);
    {% when 'rounded-large' %}
      --button-style: calc(var(--font-base-size) * 1);
  {% endcase %}

  --button-transform: {{ options.theme_button_transform }};

  /* Theme widths */
  --theme-max-width: 1320px;
  --theme-variable-width: 1600px;
  --theme-variable-width-grid: 1296px;

  /* Theme aspect ratio's */
  --aspect-ratio-landscape: 16 / 9;
  --aspect-ratio-portrait: 3 / 4;
  --aspect-ratio-rectangular: 4 / 3;
  --aspect-ratio-square: 1;
  --aspect-ratio-slide: 8 / 3;
  --aspect-ratio-padding-landscape: 0%;
  --aspect-ratio-padding-portrait: calc((4 / 3) * 100%);
  --aspect-ratio-padding-rectangular: calc((3 / 4) * 100%);
  --aspect-ratio-padding-square: calc((1 / 1) * 100%);

  /* Theme Overlay */
  --theme-overlay-opacity: 0.5;

  /* Theme Images */
  --theme-image-contain: contain;
  --theme-image-cover: cover;
  --theme-image-position: center;
  --theme-image-transition: all 0.25s ease-in-out;
  --theme-image-zoom: scale(1); /* transform */
  --theme-image-zoom-hover: scale(1.1);
  --theme-image-grayscale: grayscale(0); /* filter */
  --theme-image-grayscale-hover: grayscale(1);
  --theme-image-grayscale-reversed: grayscale(1); /* filter */
  --theme-image-grayscale-reversed-hover: grayscale(0);

  /* Theme section options for height, spacing and other settings */
  --section-height-auto: auto;
  --section-height-small: 420px;
  --section-height-medium: 560px;
  --section-height-large: 720px;
  --section-height-browser: 100vh;
  --section-margin-top: calc(var(--font-base-size) * 3);
  --section-margin-bottom: calc(var(--font-base-size) * 3);
  --section-content-margin: calc(-0.75 * var(--font-base-size));
  --section-content-padding: calc(var(--font-base-size) * 0.75);
  --section-content-block-margin: calc(var(--font-base-size) * 1.5);
  --section-content-block-padding: calc(var(--font-base-size) * 0.75);
  --section-content-block-alignment: center;
  --section-line-divider-thickness: 1px;
  --section-line-divider-opacity: 0.2;
  --section-image-variable-width: 100%;

  /* Theme Logos */
  --header-logo-height-desktop: 48px;
  --header-logo-height-mobile: 32px;
  --cart-header-logo-height-desktop: {{ options.cart_logo_height_desktop }}px;
  --cart-header-logo-height-mobile: {{ options.cart_logo_height_mobile }}px;
  --footer-logo-height: 50px;

  /* Header block */
  --header-height: 60px;
  --header-height-desktop: 136px;
  --header-height-mobile: 60px;
  --header-search-height: 40px;
  --header-nav-height: 50px;
  --header-counter-height: 20px;

  /* Banner block */
  --banner-block-position-x: center;
  --banner-block-position-y: center;
  --banner-block-alignment: center;

  /* Review block */
  --review-block-alignment: start;
  --review-block-card-border: 0.1;

  /* Testimony block */
  --testimony-card-border: 0.1;

  /* Product Block defaults */
  --pb-font-size: calc(var(--font-base-size) * 1);
  --pb-name-weight: {{ options.pb_name_weight }};
  --pb-name-text-transform: {% if options.pb_name_uppercase %}uppercase{% else %}inherit{% endif %};
  --pb-margin: calc(var(--section-content-block-margin) * 1);
  --pb-padding: calc(var(--section-content-block-padding) * 1);
  --pb-alignment: {{ options.pb_alignment }};
  --pb-color-label-status-bg: {{ options.pb_label_status_background }};
  --pb-color-label-status-text: {{ options.pb_label_status_text }};
  --pb-color-label-status-border: {{ options.pb_label_status_background | color_opacity: 0.1 }};
  --pb-color-label-new-bg: {{ options.pb_label_new_color_background }};
  --pb-color-label-new-text: {{ options.pb_label_new_color_text }};

  /* Product page default settings */
  --product-page-alignment: start;
  --product-page-border: 0.1;

  /* Contact block settings */
  --contact-block-margin: calc(var(--section-content-block-margin));
  --contact-block-padding: var(--section-content-block-padding);
  --contact-block-alignment: center;
  --contact-block-title: calc(var(--font-base-size) * .9);
  --contact-block-text: calc(var(--font-base-size) * 1.1);

  /* Whatsapp button */
  --store-whatsapp-spacing: 1rem;
  --store-whatsapp-color-icon: {{ options.store_whatsapp_color_icon }};
  --store-whatsapp-color-bg: {{ options.store_whatsapp_color_background }};
  --store-whatsapp-color-bg-hover: {{ options.store_whatsapp_color_background_hover }};
  --store-whatsapp-color-message-text: {{ options.store_whatsapp_message_color_text }};
  --store-whatsapp-color-message-bg: {{ options.store_whatsapp_message_color_background }};
  --store-whatsapp-color-message-shadow: {{ options.store_whatsapp_message_color_text | color_opacity: 0.2 }};

  /* Age verification popup */
  --av-popup-color-bg: {{ options.av_popup_color_background }};
  --av-popup-color-text: {{ options.av_popup_color_background | color_contrast: "#FFFFFF", "#222222" }};
  --av-popup-color-button-accept-bg: {{ options.av_popup_color_button_accept }};
  --av-popup-color-button-accept-text: {{ options.av_popup_color_button_accept | color_contrast: "#FFFFFF", "#222222" }};
  --av-popup-color-button-reject-bg: {{ options.av_popup_color_button_reject }};
  --av-popup-color-button-reject-text: {{ options.av_popup_color_button_reject | color_contrast: "#FFFFFF", "#222222" }};

  /* Breadcrumbs default settings */
  --breadcrumbs-margin-top: {{ options.bc_margin_top }}px;
  --breadcrumbs-margin-bottom: {{ options.bc_margin_bottom }}px;

  /* General theme colors */
  --color-discount: {{ options.color_discount }};
  --color-discount-text: {{ options.color_discount_text }};
  --color-ratings: {{ options.color_ratings }};
  --color-wishlist-icon: {{ options.color_wishlist_icon }};
  --color-wishlist-icon-active: {{ options.color_wishlist_icon_active }};
  --color-wishlist-background: {{ options.color_wishlist_background }};
  --color-wishlist-border: {{ options.color_wishlist_icon | color_opacity: 0.1 }};

  /* Utility colors from Admin */
  --color-label-pending-background: #FFEB3B;
  --color-label-pending-text: #82770E;
  --color-label-paid-background: #95B200;
  --color-label-paid-text: #FFFFFF;
  --color-label-canceled-background: #D32F2F;
  --color-label-canceled-text: #FFFFFF;
  --color-label-preparation-background: #87CEFA;
  --color-label-preparation-text: #000000;
  --color-label-outofstock-dot: rgba(211, 47, 47, 1);
  --color-label-outofstock-background: rgba(211, 47, 47, 0.1);
  --color-label-outofstock-border: rgba(211, 47, 47, .2);
  --color-label-available-dot: rgba(149, 178, 0, 1);
  --color-label-available-background: rgba(149, 178, 0, 0.1);
  --color-label-available-border: rgba(149, 178, 0, .2);
  --color-label-lowstock-dot: rgba(230, 136, 48, 1);
  --color-label-lowstock-background: rgba(240, 166, 48, 0.1);
  --color-label-lowstock-border: rgba(240, 166, 48, .2);

  /* Swiper carousel size */
  --carousel-nav-size: {{ options.theme_nav_size }}px;

  {% case options.theme_dots_type %}
  {% when 'circle' %}
  .theme-navigation__pagination > .swiper-pagination-bullet::before {
    width: calc(var(--carousel-nav-size) - calc(var(--carousel-nav-size) * 0.35));
    height: calc(var(--carousel-nav-size) - calc(var(--carousel-nav-size) * 0.35));
    background-color: var(--color-main);
    border-radius: 100px;
  }

  .theme-navigation__pagination > .swiper-pagination-bullet::after {
    border-radius: 100px;
    border: 1px solid transparent;
  }

  .theme-slider .theme-navigation__pagination > .swiper-pagination-bullet::before {
    background-color: white !important;
  }

  .theme-slider .theme-navigation__pagination > .swiper-pagination-bullet:hover::after,
  .theme-slider .theme-navigation__pagination > .swiper-pagination-bullet-active::after {
    border-color: white !important;
  }

  {% when 'diamond' %}
  .theme-navigation__pagination > .swiper-pagination-bullet {
    transform: rotate(45deg);
  }

  .theme-navigation__pagination > .swiper-pagination-bullet::before {
    width: calc(var(--carousel-nav-size) - calc(var(--carousel-nav-size) * 0.35));
    height: calc(var(--carousel-nav-size) - calc(var(--carousel-nav-size) * 0.35));
    background-color: var(--color-main);
  }

  .theme-navigation__pagination > .swiper-pagination-bullet::after {
    border: 1px solid transparent;
  }

  .theme-slider .theme-navigation__pagination > .swiper-pagination-bullet::before {
    background-color: white !important;
  }

  .theme-slider .theme-navigation__pagination > .swiper-pagination-bullet:hover::after,
  .theme-slider .theme-navigation__pagination > .swiper-pagination-bullet-active::after {
    border-color: white !important;
  }

  {% when 'line' %}
  .theme-navigation__pagination > .swiper-pagination-bullet::before {
    width: calc(var(--carousel-nav-size) * 1.25);
    height: calc(var(--carousel-nav-size) * .25);
    background-color: var(--color-main-op2);
    transition: background-color .25s;
  }

  .theme-navigation__pagination > .swiper-pagination-bullet-active::before,
  .theme-navigation__pagination > .swiper-pagination-bullet:hover::before {
    background-color: var(--color-main);
  }

  .theme-navigation__pagination > .swiper-pagination-bullet::after {
    border-color: transparent !important;
  }

  .theme-slider .theme-navigation__pagination > .swiper-pagination-bullet::before {
    background-color: rgba(255,255,255,.2) !important;
  }

  .theme-slider .theme-navigation__arrow {
    color: white !important;
  }

  .theme-slider .theme-navigation__pagination > .swiper-pagination-bullet:hover::before,
  .theme-slider .theme-navigation__pagination > .swiper-pagination-bullet-active::before {
    background-color: white !important;
  }

  {% when 'dots' %}
  .theme-navigation__pagination {
    gap: 0!important;
  }
  .theme-navigation__pagination > .swiper-pagination-bullet::before {
    width: calc(var(--carousel-nav-size) * 0.5);
    height: calc(var(--carousel-nav-size) * 0.5);
    background-color: var(--color-main-op2);
    transition: background-color .25s;
    border-radius: 1rem;
  }

  .theme-navigation__pagination > .swiper-pagination-bullet:hover::before {
    background-color: var(--color-main);
  }

  .theme-navigation__pagination > .swiper-pagination-bullet-active::before {
    background-color: var(--color-main);
    width: 100%;
  }

  .theme-navigation__pagination > .swiper-pagination-bullet {
    width: calc(var(--carousel-nav-size) * 1.5);
  }

  .theme-slider .theme-navigation__pagination > .swiper-pagination-bullet::before {
    background-color: rgba(255,255,255,0.2) !important;
  }

  .theme-slider .theme-navigation__arrow {
    color: white !important;
  }

  .theme-slider .theme-navigation__pagination > .swiper-pagination-bullet:hover::before,
  .theme-slider .theme-navigation__pagination > .swiper-pagination-bullet-active::before {
    background-color: white !important;
  }
  {% endcase %}


  /* Contact form */
  --color-success: rgba(0, 255, 116, 0.1);
  --color-error: rgba(255, 0, 0, 0.1);
}

{% for color in options.color.bundles %}
[data-bundle-color="{{ color.label }}"] {
  --color-background: {{ color.options.background }};
  --color-background-op0: {{ color.options.background | color_opacity: 0 }};
  --color-main: {{ color.options.main }};
  --color-main-op05: {{ color.options.main | color_opacity: 0.05 }};
  --color-main-op1: {{ color.options.main | color_opacity: 0.1 }};
  --color-main-op2: {{ color.options.main | color_opacity: 0.2 }};
  --color-main-op3: {{ color.options.main | color_opacity: 0.3 }};
  --color-main-op5: {{ color.options.main | color_opacity: 0.5 }};
  --color-main-op7: {{ color.options.main | color_opacity: 0.7 }};
  --color-secondary: {{ color.options.secondary }};
  --color-secondary-op05: {{ color.options.secondary | color_opacity: 0.05 }};
  --color-secondary-op1: {{ color.options.secondary | color_opacity: 0.1 }};
  --color-secondary-op3: {{ color.options.secondary | color_opacity: 0.3 }};
  --color-secondary-op7: {{ color.options.secondary | color_opacity: 0.7 }};
  --color-links: {{ color.options.links }};
  --color-links-hover: {{ color.options.main }};
  --color-button-main-bg: {{ color.options.main_button_background }};
  --color-button-main-bg-hover: {{ color.options.main_button_background | color_lighten: 12.5 }};
  --color-button-main-text: {{ color.options.main_button_text }};
  --color-button-secondary-bg: {{ color.options.secondary_button_background }};
  --color-button-secondary-bg-hover: {{ color.options.secondary_button_background | color_lighten: 12.5 }};
  --color-button-secondary-text: {{ color.options.secondary_button_text }};
  --color-border: var(--color-main-op1);
  --color-selection-text: {{ color.options.main | color_contrast: "#FFFFFF", "#222222" }};
  --color-overlay: {{ color.options.background }};

  color: var(--color-main);
  background: var(--color-background);
}
{% endfor %}

